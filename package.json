{
  "name": "receipt-parser",
  "displayName": "Receipt parser",
  "version": "0.0.1",
  "description": "A browser extension for analyzing payment receipts across multiple accounting systems and comparing the results.",
  "author": "yoirishi.zdv@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.2",
    "apache-arrow": "^21.0.0",
    "dexie": "^4.2.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "scripting",
      "activeTab",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' ws://localhost:* http://localhost:* ws://127.0.0.1:* http://127.0.0.1:*; worker-src 'self'"
    },
    "externally_connectable": {
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    },
    "web_accessible_resources": [
      {
        "resources": [
          "**/*.wasm",
          "**/*.worker.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  },
  "contributors": [
    {
      "name": "yoirishi",
      "email": "yoirishi.zdv@gmail.com",
      "url": "https://github.com/Yoirishi"
    }
  ]
}
